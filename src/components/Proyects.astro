---
import { Image } from 'astro:assets';
import Badge from "./Badge.astro"
import Button from "./Button.astro"

import vog from '../assets/img/proyects/vog.webp';
import beltg from '../assets/img/proyects/beltg.webp';
import homan from '../assets/img/proyects/homan.webp';
import almallaneraus from '../assets/img/proyects/almallanera.webp';
import eventplanner from '../assets/img/proyects/eventplanner.webp';

const proyectsList = [
    {
        'title':'Vog365',
        'description':'Desarrollo y despliegue de la pagina vog365.com, sitio web corporativo enfocado en ofrecer soluciones empresariales integrales. El proyecto incluyó diseño responsivo, optimización SEO.',
        'img': vog,
        'tags': [
            {'title':'Wordpress','color':'bg-blue-600'},
            {'title':'Boostrap CSS','color':'bg-purple-600'},
            {'title':'Javascript','color':'bg-amber-500'},
            {'title':'MySQL','color':'bg-blue-600'},
        ],
        'repository_url':'https://github.com/xalec30/vog-template',
        'preview':'https://vog365.com'
    },
    {
        'title':'Belt-g',
        'description':'Desarrollo y despliegue de la página web belt-g.com para Grifocentro C.A., empresa especializada en la venta de griferías, accesorios para baño y cocina, productos de ferretería y soluciones para el hogar.',
        'img': beltg,
        'tags': [
            {'title':'Codeigniter','color':'bg-orange-700'},
            {'title':'Boostrap CSS','color':'bg-purple-600'},
            {'title':'Jquery','color':'bg-blue-900'},
            {'title':'MySQL','color':'bg-blue-600'}
        ],
        'repository_url':'',
        'preview':'https://web.archive.org/web/20230502030458/https://belt-g.com/'
    },
    {
        'title':'Sistema Homan',
        'description':'Solución empresarial para el registro de asistencia y control de acceso de empleados, implementado en múltiples compañías en Venezuela.',
        'img': homan,
        'tags': [
            {'title':'Codeigniter','color':'bg-orange-700'},
            {'title':'Boostrap CSS','color':'bg-purple-600'},
            {'title':'Jquery','color':'bg-blue-900'},
            {'title':'PostgreSQL','color':'bg-blue-600'}
        ],
        'repository_url':'',
        'preview':''
    },
    {
        'title':'Alma Llanera US',
        'description':'Sitio web para el pedido de comida en linea en almallanera US. Unas de sus caracteristicas mas relevantes es su panel de administración robusto, diferentes metodos con la integracion con su sistema POS, manejo de variación en los articulos.',
        'img': almallaneraus,
        'tags': [
            {'title':'Wordpress','color':'bg-blue-600'},
            {'title':'Boostrap CSS','color':'bg-purple-600'},
            {'title':'Jquery','color':'bg-blue-900'},
            {'title':'MySQL','color':'bg-blue-600'}
        ],
        'repository_url':'',
        'preview':'https://almallaneraus.com/'
    },
    {
        'title':'Event Planner Online',
        'description':'Sitio web para el pedido de comida en linea en almallanera US. Unas de sus caracteristicas mas relevantes es su panel de administración robusto, diferentes metodos con la integracion con su sistema POS, manejo de variación en los articulos.',
        'img': eventplanner,
        'tags': [
            {'title':'Wordpress','color':'bg-blue-600'},
            {'title':'Boostrap CSS','color':'bg-purple-600'},
            {'title':'Jquery','color':'bg-blue-800'},
            {'title':'MySQL','color':'bg-blue-400'}
        ],
        'repository_url':'',
        'preview':'https://eventplanneronline.com/'
    }
]

interface ProyectsProps{
    size: number
}

const {size} = Astro.props as ProyectsProps;

---

<section id="proyects" class="flex flex-col w-full pt-4 pb-8">
    <h3 class="inline-flex items-center align-middle text-3xl font-bold gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="size-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-code-xml-icon lucide-code-xml"><path d="m18 16 4-4-4-4"/><path d="m6 8-4 4 4 4"/><path d="m14.5 4-5 16"/></svg>
        Proyectos
    </h3>
    <hr class="w-full border-t-2 border-gray-900 dark:border-gray-300 my-4" />
    <section class="flex flex-col w-full">
        {   
            
            proyectsList.slice(0,(size)).map((proyect) => (

                <article class="flex flex-col md:flex-row justify-between min-h-1/2 gap-4 my-8 md:my-4">
                    <div class="w-full md:w-1/2">
                        <Image class="rounded-lg border-1 border-gray-500 dark:border-gray-900 aspect-3/2 object-cover transition hover:scale-[1.03] " src={proyect.img} alt={proyect.title} width="400" height="400" />
                    </div>
                    <div class="flex flex-col w-full md:w-1/2">
                        <h4 class="text-2xl whitespace-normal ">{proyect.title}</h4>
                        <div class="flex flex-grap flex-row w-full gap-2 mt-2">
                            {
                                proyect.tags.map((tag) => (
                                     <Badge color={tag.color}>{tag.title}</Badge>
                                ))
                            }
                        </div>
                        <p class="text-base font-normal break-normal text-pretty whitespace-normal dark:text-gray-200 py-3">
                            {proyect.description}
                        </p>
                        <div class="flex flex-row gap-2">
                            {
                                proyect.repository_url != '' &&
                                <Button href={proyect.repository_url} type="link" target="_blank" classButton="secondary" sizeButton="md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="size-9 px-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-github-icon lucide-github"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
                                    Github
                                </Button>
                            }
                            {
                                proyect.preview != '' &&
                                <Button href={proyect.preview} target="_blank" type="link" classButton="secondary" sizeButton="md">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="size-9 px-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-link-icon lucide-link"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                                    Vista previa
                                </Button>
                            }
                        </div>
                    </div>  
                </article>
            ))

        }

        { Astro.originPathname != '/proyects/' &&
        <div class="flex flex-row justify-center w-full mt-4">
            <Button href="/proyects" type="link" classButton="primary" sizeButton="lg">
                    <svg xmlns="http://www.w3.org/2000/svg" class="size-9 px-2"  viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-link-icon lucide-link"><path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/><path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/></svg>
                    Ver todos los proyectos
            </Button>
        </div>
        }
        
    </section>
</section>